@model IEnumerable<Todo>

<style>
    .fila {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

</style>


@if (Model.Count() != 0)
{
    <div class="row g-1 justify-content-center justify-content-lg-start mt-3">
        @foreach (Todo todo in Model)
        {
            <div class="col-4" style="min-width: 18rem">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@todo.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@todo.EndDate.ToString("dd/mm/yyyy hh:mm:ss t")</h6>
                        <p class="card-text">@todo.Description.</p>
                    </div>
                    <div class="card-footer">
                        <div class="fila">
                            <div>
                                <a href="Task/Update/@todo.Id">
                                    <button class="btn btn-primary" type="button" style="width: fit-content">Editar</button>
                                </a>
                            </div>
                            <div>
                                <a href="Task/Delete/@todo.Id">
                                    <button
                                        class="btn btn-danger"
                                        type="button"
                                        style="width: fit-content;">
                                        Eliminar
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center"> No hay datos para mostrar </p>
}